<!--
  custom_ui_manifest.xml
  HUD-only, wrapped in a Panel (like before).
-->
<root>
  <!-- Global scripts loaded for all custom UI -->
  <scripts>
    <include src="file://{resources}/scripts/custom_game/manifest.js" />
  </scripts>

  <!-- Container for all custom UI elements (kept, as before) -->
  <Panel>
    <!-- In-game HUD -->
    <CustomUIElement
      type="Hud"
      layoutfile="file://{resources}/layout/custom_game/hud.xml" />
  </Panel>
</root>
